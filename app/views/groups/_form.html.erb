<%= simple_form_for(@group, {url: @group.id.nil? ? groups_path : group_path(@group.slug)}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
