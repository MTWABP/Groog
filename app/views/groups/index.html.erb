<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= link_to 'New Group', new_group_path, class: "btn btn-primary btn-block btn-lg"%>
      <br />

      <div class="panel panel-primary">
        <div class="panel-heading">Active Groups:</div>
        <div class="panel-body">
          <div class="list-group">
          <% @groups.each do |group|%>
            <%= link_to group_path(group.slug), class: "list-group-item" do %>
              <h4 class="list-group-item-heading"><%= group %></h4>
              <p class="list-group-item-text"><%= group.description %></p>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Pending Groups:</div>
        <div class="panel-body">
          <div class="list-group">
          <% @inactive.each do |group|%>
            <div class="list-group-item">
              <h4 class="list-group-item-heading"><%= group %> <span class="h5"><%= link_to group.url, group.url %></span></h4>
              <p class="list-group-item-text"><%= group.description %></p>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>